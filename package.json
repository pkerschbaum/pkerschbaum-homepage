{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "mr:nuke": "nx run-many --target=pkg:nuke --all --parallel && pnpm run mr:nuke:node-modules",
    "mr:nuke:artifacts": "nx run-many --target=pkg:nuke:artifacts --all --parallel",
    "mr:nuke:node-modules": "pnpm --parallel exec rimraf node_modules && rimraf node_modules",
    "mr:nuke:compute-cache": "rimraf node_modules/.cache/nx",
    "mr:lint": "nx run-many --target=pkg:lint --all --parallel",
    "mr:lint:fix": "nx run-many --target=pkg:lint:fix --all --parallel",
    "mr:format": "prettier --write --ignore-unknown .",
    "mr:build": "nx run-many --target=pkg:build --all",
    "mr:compile:dry-run": "nx run-many --target=pkg:compile:dry-run --all",
    "mr:libs:watch": "pnpm --parallel run pkg:lib:watch"
  },
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nx": "^15.3.3",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2"
  },
  "packageManager": "pnpm@7.11.0",
  "engines": {
    "pnpm": "^7.11.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "next-remote-refresh@0.9.2": "patches/next-remote-refresh@0.9.2.patch"
    }
  }
}
