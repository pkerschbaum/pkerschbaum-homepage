{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "nuke": "pnpm --parallel run nuke && pnpm run nuke:artifacts && pnpm run nuke:compute-cache && pnpm run nuke:node-modules",
    "nuke:artifacts": "pnpm --parallel run nuke:artifacts",
    "nuke:compute-cache": "del-cli \"*/**/.turbo\"",
    "nuke:node-modules": "del-cli \"**/node_modules\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write --ignore-unknown .",
    "build": "turbo build",
    "dev": "pnpm --parallel --filter=\"./packages/*\" run dev",
    "create-pnpm-patch-via-ts-patch": "pnpm --package=\"@pkerschbaum/pkg-management@1.1.1\" dlx create-pnpm-patch-via-ts-patch --typescript-version=5.2.2"
  },
  "devDependencies": {
    "@pkerschbaum-homepage/config-eslint": "workspace:*",
    "@pkerschbaum-homepage/config-stylelint": "workspace:*",
    "@pkerschbaum-homepage/config-typescript": "workspace:*",
    "del-cli": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^2.8.8",
    "turbo": "^1.10.16"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "pnpm": "8.9.0",
    "npm": "0.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "next-mdx-remote@4.3.0": "patches/next-mdx-remote@4.3.0.patch",
      "typescript@5.2.2": "patches/typescript@5.2.2.patch"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "next-mdx-remote",
        "prettier"
      ]
    }
  }
}
