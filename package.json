{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "preinstall": "npx -y --prefer-online only-allow pnpm",
    "prepare": "husky install",
    "w:nuke": "nx run-many --target=pkg:nuke --all --parallel && pnpm run w:nuke:node-modules",
    "w:nuke:artifacts": "nx run-many --target=pkg:nuke:artifacts --all --parallel",
    "w:nuke:node-modules": "pnpm --parallel exec rimraf node_modules && rimraf node_modules",
    "w:nuke:compute-cache": "rimraf node_modules/.cache/nx",
    "w:lint": "nx run-many --target=pkg:lint --all --parallel",
    "w:lint:fix": "nx run-many --target=pkg:lint:fix --all --parallel",
    "w:format": "prettier --write --ignore-unknown .",
    "w:build": "nx run-many --target=pkg:build --all",
    "w:compile:dry-run": "nx run-many --target=pkg:compile:dry-run --all",
    "w:libs:watch": "pnpm --parallel run pkg:lib:watch"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nx": "^15.7.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "zx": "^7.1.1"
  },
  "packageManager": "pnpm@8.3.1",
  "engines": {
    "pnpm": "8.3.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "next-mdx-remote@4.3.0": "patches/next-mdx-remote@4.3.0.patch"
    }
  }
}
