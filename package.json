{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "preinstall": "npx -y --prefer-online only-allow pnpm",
    "prepare": "husky install",
    "w:nuke": "pnpm --parallel run pkg:nuke && pnpm run w:nuke:compute-cache && pnpm run w:nuke:node-modules",
    "w:nuke:artifacts": "pnpm --parallel run pkg:nuke:artifacts",
    "w:nuke:node-modules": "del-cli \"**/node_modules\"",
    "w:nuke:compute-cache": "del-cli \"*/**/.turbo\"",
    "w:lint": "turbo pkg:lint",
    "w:lint:fix": "turbo pkg:lint:fix",
    "w:format": "prettier --write --ignore-unknown .",
    "w:build": "turbo pkg:build",
    "w:compile:dry-run": "turbo pkg:compile:dry-run",
    "w:libs:watch": "pnpm --parallel run pkg:lib:watch"
  },
  "devDependencies": {
    "del-cli": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.4",
    "turbo": "^1.9.4",
    "zx": "^7.2.2"
  },
  "packageManager": "pnpm@8.1.1",
  "engines": {
    "pnpm": "8.1.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "next-mdx-remote@4.3.0": "patches/next-mdx-remote@4.3.0.patch"
    }
  }
}
