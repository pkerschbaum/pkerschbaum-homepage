{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "nuke": "pnpm --parallel run nuke && pnpm run nuke:artifacts && pnpm run nuke:compute-cache && pnpm run nuke:node-modules",
    "nuke:artifacts": "pnpm --parallel run nuke:artifacts",
    "nuke:compute-cache": "del-cli \"*/**/.turbo\"",
    "nuke:node-modules": "del-cli \"**/node_modules\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write --ignore-unknown .",
    "build": "turbo build",
    "dev": "pnpm --parallel --filter=\"./packages/*\" run dev"
  },
  "devDependencies": {
    "del-cli": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "turbo": "^1.10.7"
  },
  "packageManager": "pnpm@8.1.1",
  "engines": {
    "pnpm": "8.1.1",
    "npm": "0.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "next-mdx-remote@4.3.0": "patches/next-mdx-remote@4.3.0.patch"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "next-mdx-remote",
        "prettier",
        "ts-patch",
        "typescript"
      ]
    }
  }
}
