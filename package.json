{
  "name": "pkerschbaum-homepage",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "mr:nuke": "pnpm run mr:nuke:build && pnpm run mr:nuke:node-modules",
    "mr:nuke:build": "nx run-many --target=nuke:build --all --parallel",
    "mr:nuke:node-modules": "pnpm --parallel exec rimraf node_modules && rimraf node_modules",
    "mr:lint": "nx run-many --target=lint --all --parallel",
    "mr:lint:fix": "nx run-many --target=lint:fix --all --parallel",
    "mr:format": "prettier --write --ignore-unknown .",
    "mr:build": "nx run-many --target=build --all",
    "mr:compile": "nx run-many --target=compile --all"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "nx": "^14.4.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^16.14.0",
    "pnpm": "^7.1.2"
  }
}
