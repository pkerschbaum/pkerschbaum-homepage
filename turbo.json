{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".npmrc", ".nvmrc"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
