{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "cache": true,
      "inputs": [
        "../../platform/config-typescript/tsconfig.json",
        "scripts/**",
        "src/**",
        "next-env-custom.d.ts",
        "next-env.d.ts",
        "package.json",
        "tsconfig.project.json"
      ],
      "outputs": ["dist-tsc/**", "*.tsbuildinfo"]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "../../platform/config-typescript/tsconfig.json",
        "../../platform/config-eslint/eslint-ecma.cjs",
        "../../platform/config-eslint/eslint-next.cjs",
        "../../platform/config-stylelint/stylelint.config.cjs",
        "scripts/**",
        "src/**",
        "next-env-custom.d.ts",
        "next-env.d.ts",
        ".eslintrc.cjs",
        "package.json",
        "stylelint.config.cjs",
        "tsconfig.project.json"
      ],
      "outputs": []
    },
    "lint:fix": {
      "cache": true,
      "inputs": [
        "../../platform/config-typescript/tsconfig.json",
        "../../platform/config-eslint/eslint-ecma.cjs",
        "../../platform/config-eslint/eslint-next.cjs",
        "../../platform/config-stylelint/stylelint.config.cjs",
        "scripts/**",
        "src/**",
        "next-env-custom.d.ts",
        "next-env.d.ts",
        ".eslintrc.cjs",
        "package.json",
        "stylelint.config.cjs",
        "tsconfig.project.json"
      ],
      "outputs": ["scripts/**", "src/**"]
    }
  }
}
