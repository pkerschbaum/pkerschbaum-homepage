{
  "name": "@pkerschbaum-homepage/web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "fetch-favicons": "ts-node --esm --project ./tsconfig.project.json ./scripts/fetch-favicons-for-articles.ts && prettier --write \"./generated/favicons-for-websites.json\" && git add \"./generated/favicons-for-websites.json\"",
    "generate-css-modules": "ts-node --esm --project ./tsconfig.project.json ./scripts/generate-css-modules-for-articles.ts && prettier --write \"./src/pages/**/*.module.css\" && git add \"./src/pages/**/*.module.css\"",
    "build:next": "next build",
    "build:sitemap": "next-sitemap --config next-sitemap.cjs",
    "compile": "tsc -p ./tsconfig.project.json --noEmit",
    "start": "next start",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:css": "stylelint \"./src/**/*.(css|ts|tsx)\"",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && rimraf node_modules",
    "pkg:nuke:artifacts": "rimraf dist *.tsbuildinfo",
    "pkg:build": "pnpm run pkg:nuke:artifacts && pnpm run compile && pnpm run build:next && pnpm run build:sitemap",
    "pkg:lint": "pnpm run lint:eslint . && pnpm run lint:css",
    "pkg:lint:fix": "pnpm run lint:eslint . --fix",
    "pkg:lint:file": "pnpm run lint:eslint",
    "pkg:compile:dry-run": "pnpm run compile",
    "pkg:lib:watch": "pnpm run pkg:compile:dry-run --watch --preserveWatchOutput"
  },
  "nx": {
    "namedInputs": {
      "pkg:build-inputs": [
        "default-pkg:build-inputs",
        "{projectRoot}/generated/**/*",
        "{projectRoot}/public/**/*",
        "{projectRoot}/next-env-custom.d.ts",
        "{projectRoot}/next-env.d.ts",
        "{projectRoot}/next-sitemap.cjs",
        "{projectRoot}/next.config.js"
      ],
      "pkg:build-outputs": [
        "{projectRoot}/dist/**/*",
        "{projectRoot}/*.tsbuildinfo"
      ],
      "pkg:lint-inputs": [
        "default-pkg:lint-inputs",
        "eslint-config-next-core-web-vitals-fixed.cjs"
      ]
    },
    "targets": {
      "pkg:build": {
        "outputs": [
          "{projectRoot}/dist/**/*",
          "{projectRoot}/*.tsbuildinfo"
        ]
      }
    }
  },
  "dependencies": {
    "@fontsource/rubik": "^4.5.14",
    "@pkerschbaum-homepage/commons": "workspace:1.0.0",
    "@pkerschbaum-homepage/fetch-favicon": "workspace:1.0.0",
    "@pkerschbaum-homepage/mdx": "workspace:1.0.0",
    "@pkerschbaum-homepage/shared-node": "workspace:1.0.0",
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.10",
    "dayjs": "^1.11.7",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "next": "^13.2.3",
    "next-mdx-remote": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-is": "^18.2.0",
    "sanitize-html": "^2.10.0",
    "sharp": "^0.31.3",
    "styled-components": "6.0.0-beta.9",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^4.1.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@next/env": "^13.2.3",
    "@next/eslint-plugin-next": "^13.2.3",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-is": "^17.0.3",
    "@types/sanitize-html": "^2.8.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "csstype": "^3.1.1",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.12.0",
    "next-remote-refresh": "^0.10.0",
    "next-sitemap": "^4.0.2",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.4",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^18.12.1"
  }
}
