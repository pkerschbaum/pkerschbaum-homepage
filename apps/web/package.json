{
  "name": "@pkerschbaum-homepage/web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "fetch-favicons": "pnpm run compile && node ./dist-tsc/scripts/fetch-favicons-for-articles.js && prettier --write \"./generated/favicons-for-websites.json\" && git add \"./generated/favicons-for-websites.json\"",
    "generate-css-modules": "pnpm run compile && node ./dist-tsc/scripts/generate-css-modules-for-articles.js && prettier --write \"./src/app/**/*.module.css\" && git add \"./src/app/**/*.module.css\"",
    "build:next": "next build",
    "build:sitemap": "next-sitemap --config next-sitemap.cjs",
    "compile": "tsc -p ./tsconfig.project.json",
    "start": "next start",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:css": "stylelint \"./src/**/*.(css|ts|tsx)\"",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && del-cli node_modules",
    "pkg:nuke:artifacts": "del-cli dist dist-tsc *.tsbuildinfo",
    "pkg:build": "pnpm run pkg:nuke:artifacts && pnpm run compile && node ./dist-tsc/scripts/generate-and-store-rss-feed.js && pnpm run build:next && pnpm run build:sitemap",
    "pkg:lint": "pnpm run lint:eslint . && pnpm run lint:css",
    "pkg:lint:fix": "pnpm run lint:eslint . --fix",
    "pkg:lint:file": "pnpm run lint:eslint",
    "pkg:compile:dry-run": "pnpm run compile",
    "pkg:lib:watch": "pnpm run pkg:compile:dry-run --watch --preserveWatchOutput"
  },
  "nx": {
    "namedInputs": {
      "pkg:build-inputs": [
        "default-pkg:build-inputs",
        "{projectRoot}/generated/**/*",
        "{projectRoot}/public/**/*",
        "{projectRoot}/next-env-custom.d.ts",
        "{projectRoot}/next-env.d.ts",
        "{projectRoot}/next-sitemap.cjs",
        "{projectRoot}/next.config.js"
      ],
      "pkg:build-outputs": [
        "{projectRoot}/dist/**/*",
        "{projectRoot}/dist-tsc/**/*",
        "{projectRoot}/*.tsbuildinfo"
      ],
      "pkg:lint-inputs": [
        "default-pkg:lint-inputs",
        "{projectRoot}/eslint-config-next-core-web-vitals-fixed.cjs"
      ]
    },
    "targets": {
      "pkg:build": {
        "outputs": [
          "{projectRoot}/dist/**/*",
          "{projectRoot}/dist-tsc/**/*",
          "{projectRoot}/*.tsbuildinfo"
        ]
      }
    }
  },
  "dependencies": {
    "@fontsource/rubik": "^4",
    "@pkerschbaum-homepage/commons": "workspace:*",
    "@pkerschbaum-homepage/fetch-favicon": "workspace:*",
    "@pkerschbaum-homepage/mdx": "workspace:*",
    "@pkerschbaum-homepage/shared-node": "workspace:*",
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.11",
    "dayjs": "^1.11.8",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "next": "^13.4.4",
    "next-mdx-remote": "4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-is": "^18.2.0",
    "sanitize-html": "^2.10.0",
    "sharp": "^0.32.1",
    "styled-components": "6.0.0-rc.2-4007",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^4.1.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@next/env": "^13.4.4",
    "@next/eslint-plugin-next": "^13.4.4",
    "@types/node": "^18",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/react-is": "^18.2.0",
    "@types/sanitize-html": "^2.9.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "csstype": "^3.1.2",
    "eslint": "^8.42.0",
    "eslint-config-next": "^13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "next-sitemap": "^4.1.3",
    "postcss": "^8.4.24",
    "postcss-styled-syntax": "^0.4.0",
    "prettier": "2.8.4",
    "stylelint": "^15.6.3",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "engines": {
    "node": "^18.12.1"
  }
}
