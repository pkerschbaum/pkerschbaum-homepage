{
  "name": "@pkerschbaum-homepage/web",
  "private": true,
  "type": "module",
  "imports": {
    "#pkg/*": "./src/*"
  },
  "scripts": {
    "build": "pnpm run internal:compile",
    "build:next": "pnpm run nuke:artifacts && pnpm run internal:compile && generate-and-store-rss-feed && pnpm run internal:build:next && pnpm run internal:build:sitemap",
    "dev": "next dev",
    "internal:build:next": "next build",
    "internal:build:sitemap": "next-sitemap --config next-sitemap.cjs",
    "internal:compile": "tsc -p ./tsconfig.project.json",
    "internal:compile:watch": "pnpm run internal:compile --watch",
    "internal:fetch-favicons": "playwright install chromium && pnpm run internal:compile && fetch-favicons-for-articles && prettier --write \"./generated/favicons-for-websites.json\" && git add \"./generated/favicons-for-websites.json\"",
    "internal:generate-css-modules": "pnpm run internal:compile && generate-css-modules-for-articles && prettier --write \"./src/app/**/*.module.css\" && git add \"./src/app/**/*.module.css\"",
    "lint": "pnpm run lint:eslint && pnpm run lint:css",
    "lint:css": "stylelint \"./src/**/*.(css|ts|cts|mts|tsx|ctsx|mtsx)\" \"!./src/app/blog/*/styles.module.css\" \"!./src/app/tidbits/*/styles.module.css\"",
    "lint:eslint": "pnpm run lint:file .",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "pnpm run lint:file . --fix && pnpm run lint:css --fix",
    "nuke": "pnpm run nuke:artifacts && del-cli --dot=true node_modules",
    "nuke:artifacts": "del-cli --dot=true dist *.tsbuildinfo",
    "start": "next start"
  },
  "dependencies": {
    "@fontsource-variable/rubik": "^5.2.5",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.2.2",
    "@pigment-css/react": "^0.0.28",
    "@pkerschbaum-homepage/mdx": "workspace:*",
    "@pkerschbaum-homepage/mdx-blog": "workspace:*",
    "@pkerschbaum/commons-ecma": "^2.4.1",
    "@types/mdast": "^4.0.4",
    "acorn": "^8.14.1",
    "dayjs": "^1.11.13",
    "next": "^15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-feather": "^2.0.10",
    "react-is": "^19.0.0",
    "sanitize-html": "^2.14.0",
    "sharp": "^0.33.5",
    "tiny-invariant": "^1.3.3",
    "unist-util-visit": "^5.0.0",
    "webpack": "^5.98.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.26.10",
    "@next/env": "^15.2.2",
    "@opentelemetry/api": "^1.9.0",
    "@pigment-css/nextjs-plugin": "^0.0.28",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.13.10",
    "@types/react": "^18",
    "@types/react-dom": "^19.0.4",
    "@types/react-is": "^19.0.0",
    "@types/sanitize-html": "^2.13.0",
    "@vercel/analytics": "^1.5.0",
    "next-sitemap": "^4.2.3",
    "playwright": "^1.51.0",
    "postcss": "^8.5.3",
    "postcss-styled-syntax": "^0.7.1",
    "stylelint": "^16.16.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0"
  },
  "engines": {
    "node": "^22.14.0"
  }
}
