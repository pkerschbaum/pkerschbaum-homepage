{
  "name": "@pkerschbaum-homepage/mdx",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "compile": "tsc -p ./tsconfig.project.json",
    "lint": "eslint --max-warnings 0",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && rimraf node_modules",
    "pkg:nuke:artifacts": "rimraf dist *.tsbuildinfo",
    "pkg:build": "pnpm run compile",
    "pkg:lib:watch": "pnpm run pkg:build --watch --preserveWatchOutput",
    "pkg:lint": "pnpm run lint .",
    "pkg:lint:fix": "pnpm run pkg:lint --fix",
    "pkg:lint:file": "pnpm run lint",
    "pkg:compile:dry-run": "pnpm run compile --noEmit"
  },
  "dependencies": {
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.10",
    "esbuild": "0.14.54",
    "mdx-bundler": "^9.2.1",
    "refractor": "^4.8.0",
    "rehype-prism-plus": "^1.5.0",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^4.1.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.11.0",
    "prettier": "^2.8.1",
    "ts-patch": "^2.1.0",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.5"
  }
}
