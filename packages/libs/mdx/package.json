{
  "name": "@pkerschbaum-homepage/mdx",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && rimraf node_modules",
    "pkg:nuke:artifacts": "rimraf dist *.tsbuildinfo",
    "compile": "tsc -p ./tsconfig.project.json",
    "pkg:build": "pnpm run compile",
    "pkg:lib:watch": "pnpm run pkg:build --watch --preserveWatchOutput",
    "lint": "eslint --max-warnings 0",
    "pkg:lint": "pnpm run lint .",
    "pkg:lint:fix": "pnpm run pkg:lint --fix",
    "pkg:compile:dry-run": "pnpm run compile --noEmit"
  },
  "dependencies": {
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.10",
    "esbuild": "^0.14.48",
    "mdx-bundler": "^9.0.1",
    "refractor": "^4.7.0",
    "rehype-prism-plus": "^1.4.1",
    "tiny-invariant": "^1.3.0",
    "unist-util-visit": "^4.1.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.25",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-regexp": "^1.7.0",
    "prettier": "^2.7.1",
    "ts-patch": "^2.0.1",
    "typescript": "^4.8.4",
    "typescript-transform-paths": "^3.3.1"
  }
}
