{
  "name": "@pkerschbaum-homepage/commons",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "postinstall": "ts-patch install -s",
    "nuke": "pnpm run nuke:build && pnpm run nuke:node-modules",
    "nuke:build": "rimraf dist *.tsbuildinfo",
    "build": "tsc -p ./tsconfig.project.json",
    "lint": "eslint --max-warnings 0",
    "lint:package": "pnpm run lint .",
    "lint:package:fix": "pnpm run lint:package --fix",
    "compile": "tsc -p ./tsconfig.project.json --noEmit",
    "compile:watch": "pnpm run compile --watch"
  },
  "dependencies": {
    "@pkerschbaum/ts-utils": "^0.0.1",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-regexp": "^1.7.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-patch": "^2.0.1",
    "typescript": "^4.7.4",
    "typescript-transform-paths": "^3.3.1"
  }
}
