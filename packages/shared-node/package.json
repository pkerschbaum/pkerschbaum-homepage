{
  "name": "@pkerschbaum-homepage/shared-node",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "compile": "tsc -p ./tsconfig.project.json",
    "lint": "eslint --max-warnings 0",
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && del-cli node_modules",
    "pkg:nuke:artifacts": "del-cli dist *.tsbuildinfo",
    "pkg:build": "pnpm run compile",
    "pkg:lib:watch": "pnpm run pkg:build --watch --preserveWatchOutput",
    "pkg:lint": "pnpm run lint .",
    "pkg:lint:fix": "pnpm run pkg:lint --fix",
    "pkg:lint:file": "pnpm run lint",
    "pkg:compile:dry-run": "pnpm run compile --noEmit"
  },
  "dependencies": {
    "tiny-invariant": "^1.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "prettier": "2.8.4",
    "ts-patch": "^2.1.0",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  }
}
