{
  "extends": "../../../tsconfig.workspace.json",
  "compilerOptions": {
    /* Language and Environment */
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",

    /* Modules */
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    // as of next@13.1.1, "paths" is still needed for package-internal imports even though package.json#imports is set
    "paths": {
      "#pkg/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
