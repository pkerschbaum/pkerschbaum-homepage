{
  "extends": "../../../tsconfig.workspace.json",
  "compilerOptions": {
    /* Language and Environment */
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* Modules */
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node16",
    "paths": {
      "#pkg/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
