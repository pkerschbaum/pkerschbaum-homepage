{
  "name": "@pkerschbaum-homepage/web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "pkg:nuke": "pnpm run pkg:nuke:artifacts && rimraf node_modules",
    "pkg:nuke:artifacts": "rimraf dist generated/favicons-for-websites.json *.tsbuildinfo",
    "dev": "next dev",
    "pkg:build": "pnpm run pkg:nuke:artifacts && pnpm run build:fetch-favicons-for-articles && pnpm run build:next && pnpm run build:sitemap",
    "build:fetch-favicons-for-articles": "ts-node --esm --project ./tsconfig.project.json ./scripts/fetch-favicons-for-articles.ts",
    "build:next": "next build",
    "build:sitemap": "next-sitemap --config next-sitemap.cjs",
    "export": "next export",
    "start": "next start",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:css": "stylelint \"./src/**/*.(css|ts|tsx)\"",
    "pkg:lint": "pnpm run lint:eslint . && pnpm run lint:css",
    "pkg:lint:fix": "pnpm run lint:eslint . --fix",
    "pkg:lint:file": "pnpm run lint:eslint",
    "pkg:compile:dry-run": "tsc -p ./tsconfig.project.json --noEmit",
    "pkg:lib:watch": "pnpm run pkg:compile:dry-run --watch --preserveWatchOutput"
  },
  "nx": {
    "targets": {
      "pkg:build": {
        "outputs": [
          "{projectRoot}/dist/**/*",
          "{projectRoot}/generated/**/*"
        ]
      }
    }
  },
  "dependencies": {
    "@fontsource/rubik": "^4.5.11",
    "@pkerschbaum-homepage/commons": "workspace:1.0.0",
    "@pkerschbaum-homepage/fetch-favicon": "workspace:1.0.0",
    "@pkerschbaum-homepage/mdx": "workspace:1.0.0",
    "@pkerschbaum-homepage/shared-node": "workspace:1.0.0",
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.10",
    "dayjs": "^1.11.6",
    "esbuild": "^0.14.54",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^9.0.1",
    "next": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-is": "^18.2.0",
    "sharp": "^0.31.1",
    "styled-components": "^5.3.6",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^4.1.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@next/env": "^13.0.0",
    "@next/eslint-plugin-next": "^13.0.0",
    "@types/node": "^16.11.25",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-is": "^17.0.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "csstype": "^3.1.1",
    "eslint": "^8.26.0",
    "eslint-config-next": "^13.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.9.0",
    "next-remote-refresh": "^0.9.2",
    "next-sitemap": "^3.1.29",
    "postcss": "^8.4.18",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^6.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^16.14.0"
  }
}
