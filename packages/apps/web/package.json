{
  "name": "@pkerschbaum-homepage/web",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "nuke": "pnpm run nuke:build",
    "nuke:build": "rimraf dist generated/favicons-for-websites.json *.tsbuildinfo",
    "dev": "next dev",
    "build": "pnpm run nuke:build && pnpm run build:fetch-favicons-for-posts && pnpm run build:next && pnpm run build:sitemap",
    "build:fetch-favicons-for-posts": "ts-node --esm --project ./tsconfig.project.json ./scripts/fetch-favicons-for-posts.ts",
    "build:next": "next build",
    "build:sitemap": "next-sitemap --config next-sitemap.cjs",
    "export": "next export",
    "start": "next start",
    "lint": "eslint --max-warnings 0",
    "lint:package": "pnpm run lint .",
    "lint:package:fix": "pnpm run lint:package --fix",
    "compile": "tsc -p ./tsconfig.project.json --noEmit",
    "lib:watch": "pnpm run compile --watch --preserveWatchOutput"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist/**/*",
          "{projectRoot}/generated/**/*"
        ]
      }
    }
  },
  "dependencies": {
    "@fontsource/rubik": "^4.5.10",
    "@pkerschbaum-homepage/commons": "workspace:1.0.0",
    "@pkerschbaum-homepage/fetch-favicon": "workspace:1.0.0",
    "@pkerschbaum-homepage/mdx": "workspace:1.0.0",
    "@pkerschbaum-homepage/shared-node": "workspace:1.0.0",
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/mdast": "^3.0.10",
    "dayjs": "^1.11.3",
    "esbuild": "^0.14.48",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "mdx-bundler": "^9.0.1",
    "next": "^12.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.9",
    "react-is": "^18.2.0",
    "sharp": "^0.30.7",
    "styled-components": "^5.3.5",
    "tiny-invariant": "^1.2.0",
    "unist-util-visit": "^4.1.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.2.2",
    "@next/env": "^12.2.2",
    "@next/eslint-plugin-next": "^12.2.2",
    "@types/node": "^16.11.25",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-is": "^17.0.3",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "csstype": "^3.1.0",
    "eslint": "^8.18.0",
    "eslint-config-next": "^12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.7.0",
    "next-remote-refresh": "^0.9.2",
    "next-sitemap": "^3.1.10",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "^16.14.0"
  }
}
