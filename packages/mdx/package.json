{
  "name": "@pkerschbaum-homepage/mdx",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "internal:compile": "tsc -p ./tsconfig.project.json",
    "nuke": "pnpm run nuke:artifacts && del-cli node_modules",
    "nuke:artifacts": "del-cli dist *.tsbuildinfo",
    "build": "pnpm run internal:compile",
    "dev": "pnpm run build --watch --preserveWatchOutput",
    "lint": "pnpm run lint:file .",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@pkerschbaum/commons-ecma": "^2.1.2",
    "@types/hast": "^3.0.0",
    "@types/mdast": "^4.0.0",
    "next-mdx-remote": "4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "refractor": "^4.8.1",
    "rehype-prism-plus": "^1.6.1",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@pkerschbaum-homepage/config-eslint": "workspace:*",
    "@pkerschbaum-homepage/config-typescript": "workspace:*",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6"
  }
}
