{
  "name": "@pkerschbaum-homepage/mdx",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "internal:compile": "tsc -p ./tsconfig.project.json",
    "nuke": "pnpm run nuke:artifacts && del-cli node_modules",
    "nuke:artifacts": "del-cli dist *.tsbuildinfo",
    "build": "pnpm run internal:compile",
    "dev": "pnpm run build --watch --preserveWatchOutput",
    "lint": "pnpm run lint:file .",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "pnpm run lint --fix",
    "compile:dry-run": "pnpm run internal:compile --noEmit"
  },
  "dependencies": {
    "@pkerschbaum-homepage/commons": "workspace:*",
    "@pkerschbaum/ts-utils": "^0.0.1",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.11",
    "next-mdx-remote": "4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "refractor": "^4.8.1",
    "rehype-prism-plus": "^1.5.1",
    "tiny-invariant": "^1.3.1",
    "unist-util-visit": "^4.1.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "prettier": "2.8.4",
    "ts-patch": "^2.1.0",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  }
}
