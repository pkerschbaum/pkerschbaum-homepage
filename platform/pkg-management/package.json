{
  "name": "@pkerschbaum-homepage/pkg-management",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "exports": {
    ".": null,
    "./*": null
  },
  "scripts": {
    "internal:compile": "tsc -p ./tsconfig.project.json",
    "nuke": "pnpm run nuke:artifacts && del-cli node_modules",
    "nuke:artifacts": "del-cli *.tsbuildinfo",
    "build": "pnpm run internal:compile",
    "dev": "pnpm run build --watch --preserveWatchOutput",
    "lint": "pnpm run lint:file .",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@pkerschbaum/commons-ecma": "^2.1.1",
    "@pkerschbaum/commons-node": "^2.1.1",
    "@pnpm/find-workspace-dir": "^6.0.2",
    "@pnpm/logger": "^5.0.0",
    "@pnpm/reviewing.dependencies-hierarchy": "^2.1.0",
    "zx": "^7.2.3"
  },
  "devDependencies": {
    "@pkerschbaum-homepage/config-eslint": "workspace:*",
    "@pkerschbaum-homepage/config-typescript": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-code-import-patterns": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "@types/node": "^18",
    "typescript": "^5.2.2"
  }
}
