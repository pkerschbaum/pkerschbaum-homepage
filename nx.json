{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["pkg:build", "pkg:compile:dry-run", "pkg:lint", "pkg:lint:fix"],
        "parallel": 20
      }
    }
  },
  "namedInputs": {
    "dependencies": ["{workspaceRoot}/.npmrc", "{workspaceRoot}/pnpm-lock.yaml"],
    "task-config": ["{workspaceRoot}/package.json", "{projectRoot}/package.json"],
    "typescript-compile-inputs": [
      "{workspaceRoot}/tsconfig.workspace.json",
      "{projectRoot}/tsconfig.project.json",
      "{projectRoot}/src/**/*"
    ],
    "typescript-compile-outputs": ["{projectRoot}/dist/**/*", "{projectRoot}/*.tsbuildinfo"],

    "default-pkg:build-inputs": ["dependencies", "task-config", "typescript-compile-inputs"],
    "default-pkg:build-outputs": ["typescript-compile-outputs"],

    "pkg:build-inputs": ["default-pkg:build-inputs"],
    "pkg:build-outputs": ["default-pkg:build-outputs"],

    "default-pkg:lint-inputs": [
      "dependencies",
      "task-config",
      "typescript-compile-inputs",
      "{workspaceRoot}/eslint-template.cjs",
      "{projectRoot}/.eslintrc.cjs"
    ],

    "pkg:lint-inputs": ["default-pkg:lint-inputs"]
  },
  "targetDefaults": {
    "pkg:build": {
      "inputs": ["pkg:build-inputs", { "input": "pkg:build-outputs", "dependencies": true }],
      "outputs": ["{projectRoot}/dist/**/*", "{projectRoot}/*.tsbuildinfo"],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:compile:dry-run": {
      "inputs": ["pkg:build-inputs", { "input": "pkg:build-outputs", "dependencies": true }],
      "outputs": [],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:lint": {
      "inputs": ["pkg:lint-inputs", { "input": "pkg:build-outputs", "dependencies": true }],
      "outputs": [],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:lint:fix": {
      "inputs": ["pkg:lint-inputs", { "input": "pkg:build-outputs", "dependencies": true }],
      "outputs": ["{projectRoot}/src/**/*"],
      "dependsOn": ["^pkg:build"]
    }
  },
  "defaultBase": "master"
}
