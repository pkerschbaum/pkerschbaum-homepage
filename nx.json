{
  "affected": {
    "defaultBase": "master"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["pkg:build", "pkg:compile:dry-run", "pkg:lint", "pkg:lint:fix"]
      }
    }
  },
  "namedInputs": {
    "sources": ["{projectRoot}/src/**/*"],
    "package-files": ["{projectRoot}/package.json"],
    "tsc-files": ["{projectRoot}/tsconfig.project.json", "{projectRoot}/*.tsbuildinfo"],
    "eslint-files": ["{workspaceRoot}/packages/eslint-template.cjs", "{projectRoot}/.eslintrc.cjs"],
    "outputs": ["{projectRoot}/dist/**/*"]
  },
  "targetDefaults": {
    "pkg:build": {
      "inputs": [
        "sources",
        "package-files",
        "tsc-files",
        { "input": "outputs", "projects": "dependencies" }
      ],
      "outputs": ["{projectRoot}/dist/**/*"],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:compile:dry-run": {
      "inputs": [
        "sources",
        "package-files",
        "tsc-files",
        { "input": "outputs", "projects": "dependencies" }
      ],
      "outputs": [],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:lint": {
      "inputs": [
        "sources",
        "package-files",
        "tsc-files",
        "eslint-files",
        { "input": "outputs", "projects": "dependencies" }
      ],
      "outputs": [],
      "dependsOn": ["^pkg:build"]
    },
    "pkg:lint:fix": {
      "inputs": [
        "sources",
        "package-files",
        "tsc-files",
        "eslint-files",
        { "input": "outputs", "projects": "dependencies" }
      ],
      "outputs": ["{projectRoot}/src/**/*"],
      "dependsOn": ["^pkg:build"]
    }
  }
}
